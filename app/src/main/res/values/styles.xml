<resources>
    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/dark_gray_blue</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Theme.Weather.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@android:color/transparent</item>
        <item name="iconifiedByDefault">false</item>
        <item name="closeIcon">@drawable/ic_search_view_close</item>
        <item name="searchIcon">@null</item>
    </style>

    <style name="Theme.Weather.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Theme.Weather.ToolbarButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/ripple_oval_background</item>
    </style>

    <style name="Theme.Weather.Ripple">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Theme.Weather.Card">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawablePadding">24dp</item>
    </style>

    <style name="Theme.Weather.Card.Ripple" parent="Theme.Weather.Ripple">
        <item name="android:textViewStyle">@style/Theme.Weather.Card</item>
        <item name="android:background">@drawable/dark_ripple_background</item>
    </style>

    <style name="Theme.Weather.DialogNoteButton" parent="Theme.Weather.Ripple">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/pale_cyan</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/light_ripple_background</item>
    </style>

    <style name="Theme.Weather.DialogNoteLayout">
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">@color/anchor</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="Widget.App.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorOnSurface">@color/black</item>
        <item name="colorSecondary">@color/gold</item>
    </style>
</resources>